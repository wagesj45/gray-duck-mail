@using GrayDuckMail.Common.Localization;
@model RemoveDiscussionListModel
@{
    ViewData["Title"] = LanguageHelper.GetValue(ResourceName.View_List_Remove_Title);
}

<hgroup>
    <h1>@LanguageHelper.FormatValue(ResourceName.View_List_Remove_Format_Heading, Model.DiscussionList.Name)</h1>
    <h2>@LanguageHelper.GetValue(ResourceName.View_List_Remove_Subheading)</h2>
</hgroup>

<article>
    <div class="grid">
        <div>
            <a href="/List/ConfirmRemove/@Model.DiscussionList.ID" role="button" style="width:100%;"><i class="icofont-delete-alt"></i> @LanguageHelper.GetValue(ResourceName.View_Common_Remove)</a>
        </div>
        <div>
            <a href="/List" role="button" class="contrast" style="width:100%;"><i class="icofont-not-allowed"></i> @LanguageHelper.GetValue(ResourceName.View_Common_Cancel)</a>
        </div>
    </div>
</article>