@model RemoveDiscussionListModel
@{
    ViewData["Title"] = "Remove Discussion List?";
}

<hgroup>
    <h1>Removing @Model.DiscussionList.Name</h1>
    <h2>Are you sure you want to remove this discussion list?</h2>
</hgroup>

<article>
    <div class="grid">
        <div>
            <a href="/List/ConfirmRemove/@Model.DiscussionList.ID" role="button" style="width:100%;"><i class="icofont-delete-alt"></i> Remove</a>
        </div>
        <div>
            <a href="/List" role="button" class="contrast" style="width:100%;"><i class="icofont-not-allowed"></i> Cancel</a>
        </div>
    </div>
</article>